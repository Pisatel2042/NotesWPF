<Window x:Class="Notes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notes"
        mc:Ignorable="d"
        Title="Notes" Height="450" Width="800">
    <Grid Margin="0,0,0,-16" >
          <DatePicker HorizontalAlignment="Left" Margin="374,0,0,0" VerticalAlignment="Center" Width="120"/>
          <DataGrid x:Name="MainDataGrid" Margin="0,0,0,287"/>
                <Label x:Name="DateLabel" Content="Date" HorizontalAlignment="Left" Margin="306,0,0,0" VerticalAlignment="Center" FontSize="16"/>
        <Label x:Name="NameLabel" Content="Name" HorizontalAlignment="Left" Margin="306,258,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox HorizontalAlignment="Left" Margin="374,262,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" FontSize="16"/>
        <Label x:Name="NumberLabel" Content="Number" HorizontalAlignment="Left" Margin="298,306,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox HorizontalAlignment="Left" Margin="374,310,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" FontSize="16"/>
        <Button Content="Add" Command="{Binding AddTaskCommand}" HorizontalAlignment="Left" Margin="42,376,0,0" VerticalAlignment="Top" Height="45" Width="162" Click="Add_Button_Click"/>
        <Button Content="Update" Command="{Binding UpdateTaskCommand}" HorizontalAlignment="Center" Margin="0,376,0,0" VerticalAlignment="Top" Height="45" Width="162"/>
        <Button Content="Delete" Command="{Binding DeleteTaskCommand}" HorizontalAlignment="Left" Margin="580,376,0,0" VerticalAlignment="Top" Height="45" Width="162"/>
      
        
    </Grid>
</Window>
